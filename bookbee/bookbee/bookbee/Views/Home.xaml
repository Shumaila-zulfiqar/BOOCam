<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:local="clr-namespace:CarouselView.FormsPlugin.Abstractions;assembly=CarouselView.FormsPlugin.Abstractions"
             mc:Ignorable="d"
               x:Class="bookbee.Views.Home"
               xmlns:controls="clr-namespace:bookbee.Controls"
             Title="BOOCam"
             
             xmlns:viewModels="clr-namespace:bookbee.ViewModels"
             xmlns:converters="clr-namespace:bookbee.Converters">

    
    <ContentPage.BindingContext>

        <viewModels:ComputerVisionViewModel/>

    </ContentPage.BindingContext>


    <ContentPage.Resources>

        <ResourceDictionary>

            <converters:ListOfLinesToOneStringConverter x:Key="ListOfLinesToOneStringConverter"/>

        </ResourceDictionary>

    </ContentPage.Resources>

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
         <!--   <OnPlatform.iOS >0,20,0,0</OnPlatform.iOS>-->
        </OnPlatform>
    </ContentPage.Padding>

    <ContentPage.Content>

        <AbsoluteLayout>

            <RelativeLayout>


                <ScrollView 
                    RelativeLayout.XConstraint="0"
                    RelativeLayout.YConstraint="0"
                    RelativeLayout.WidthConstraint="{ConstraintExpression
            Type=RelativeToParent,Property=Width,Factor=1,Constant=0}"
                    RelativeLayout.HeightConstraint="{ConstraintExpression
            Type=RelativeToParent,Property=Height,Factor=1,Constant=0}"
                    >

                    <StackLayout Padding="20,20,20,20"
                    Spacing="20">


                        



                        <Label Text="Trending"
                               Margin="0,31,0,11"            
                               FontSize="17"
                               TextColor="#990033" 
                               HorizontalOptions="Center"/>
                        <BoxView Color="#FFB2ADAE"
                                 HeightRequest="2"
                                 HorizontalOptions="Fill" />

                            <CarouselView x:Name="RecommendationCarousalView" HeightRequest="217"           
                             PeekAreaInsets="100">

                                <CarouselView.ItemTemplate>
                                    <DataTemplate>


                                    <StackLayout>
                                        <Frame Padding="5" CornerRadius="7"
                                                 Margin="20" HorizontalOptions="Center"                                        
                                   VerticalOptions="CenterAndExpand"  >
                                            <ImageButton BorderColor="DarkGray"
                                   Source="{Binding .}"
                                   Padding="0,0,0,0"
                                   Margin="0,0,0,0"                                  
                                   Aspect="AspectFit"
                                   HeightRequest="100"
                                   WidthRequest="100"
                                   HorizontalOptions="Center">

                                            </ImageButton>
                                        </Frame>
                                    </StackLayout>

                                </DataTemplate>
                                </CarouselView.ItemTemplate>
                            </CarouselView>
                  

                        <Label Text="Books You May Like"
                               Margin="0,31,0,11"            
                               FontSize="17"
                               TextColor="#990033" 
                               HorizontalOptions="Center"/>
                        <BoxView Color="#FFB2ADAE"
                                 HeightRequest="2"
                                 HorizontalOptions="Fill" />


                        <CarouselView x:Name="CarousalView" HeightRequest="237" 
                                                     
                      PeekAreaInsets="100">

                            <CarouselView.ItemTemplate>
                                <DataTemplate>

                                  
                                        <StackLayout>
                                            <Frame Padding="5" CornerRadius="7"
                                                 Margin="20" HorizontalOptions="Center"                                        
                                   VerticalOptions="CenterAndExpand"  >
                                                <ImageButton BorderColor="DarkGray"
                                   Source="{Binding .}"
                                   Padding="0,0,0,0"
                                   Margin="0,0,0,0"                                  
                                   Aspect="AspectFit"
                                   HeightRequest="100"
                                   WidthRequest="100"
                                   HorizontalOptions="Center">

                                                </ImageButton>
                                            </Frame>
                                        </StackLayout>
                                </DataTemplate>
                            </CarouselView.ItemTemplate>
                        </CarouselView>

                     

                    </StackLayout>

                </ScrollView>

            </RelativeLayout>

            <Button 
                x:Name="camera_btn"
                BackgroundColor="#990033" 
                ImageSource="ic_action_camera_alt.png" 
                Margin="0,0,11,0"
                CornerRadius="50"                
                AbsoluteLayout.LayoutBounds="1, 0.95, 87, 77"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Clicked="camera_btn_Clicked"
                
        />

        </AbsoluteLayout>

    </ContentPage.Content>


</ContentPage>
