    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <!--   <OnPlatform.iOS >0,20,0,0</OnPlatform.iOS>-->
        </OnPlatform>
    </ContentPage.Padding>

    <ContentPage.Content>

        <AbsoluteLayout>

            <RelativeLayout>


                <ScrollView 
                    RelativeLayout.XConstraint="0"
                    RelativeLayout.YConstraint="0"
                    RelativeLayout.WidthConstraint="{ConstraintExpression
            Type=RelativeToParent,Property=Width,Factor=1,Constant=0}"
                    RelativeLayout.HeightConstraint="{ConstraintExpression
            Type=RelativeToParent,Property=Height,Factor=1,Constant=0}"
                    >

                    <StackLayout Padding="20,20,20,20"
                    Spacing="21">


                        


                        <Label Text="Your Book Shelf"
                               Margin="0,31,0,11"            
                               FontSize="17"
                               TextColor="#990033" 
                               HorizontalOptions="Center"/>
                        <BoxView Color="#FFB2ADAE"
                                 HeightRequest="2"
                                 HorizontalOptions="Fill" />

                        <CarouselView x:Name="ShelfcarouselView" HeightRequest="217"           
                             PeekAreaInsets="100">

                            <CarouselView.ItemTemplate>
                                <DataTemplate>
                                    

                                  
                                        <StackLayout>
                                            <Frame Padding="5" CornerRadius="7"
                                                 Margin="20" HorizontalOptions="Center"                                        
                                   VerticalOptions="CenterAndExpand"  >
                                                <ImageButton BorderColor="DarkGray"
                                   Source="{Binding .}"
                                   Padding="0,0,0,0"
                                   Margin="0,0,0,0"                                  
                                   Aspect="AspectFit"
                                   HeightRequest="100"
                                   WidthRequest="100"
                                   HorizontalOptions="Center">

                                                </ImageButton>
                                            </Frame>
                                        </StackLayout>
                              
                                </DataTemplate>
                            </CarouselView.ItemTemplate>
                        </CarouselView>




                        <BoxView Color="#FFB2ADAE"
                                 HeightRequest="2"
                                 HorizontalOptions="Fill" />


                        <Label Text="See All"
                               Margin="0,31,0,11"     
                               TextDecorations="Underline"
                               
                               FontSize="15"
                               TextColor="#990033" 
                               HorizontalOptions="Center"/>

                        <ListView x:Name="BookList" RowHeight="93" SeparatorColor="#990033">
                            <ListView.ItemTemplate>
                                <DataTemplate >

                                    <ImageCell ImageSource="{Binding bookcoverurl}" Text="{Binding bookdetail}" TextColor="#990033" ></ImageCell>
                                  <!--  <ViewCell>


                                        <StackLayout VerticalOptions="FillAndExpand"
